{
  "name": "capacitor-background-geolocation",
  "version": "0.1.0",
  "description": "A native plugin to get geolocation updates also when app is in background",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "seididieci",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^2.4.0",
    "@capacitor/core": "^2.4.0",
    "@capacitor/ios": "^2.4.0",
    "@ionic/prettier-config": "^1.0.0",
    "@ionic/swiftlint-config": "^1.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "lodash": "^4.17.19",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "swiftlint": "^1.0.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^2.4.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorBackgroundGeolocation.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "geolocation",
    "background"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/seididieci/capacitor-backround-geolocation.git"
  },
  "bugs": {
    "url": "https://github.com/seididieci/capacitor-backround-geolocation.git/issues"
  }
}
